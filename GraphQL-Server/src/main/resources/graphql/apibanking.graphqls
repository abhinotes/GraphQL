# src/main/resources/graphql/schema.graphqls

type CustomerContext {
    id: ID!
    name: String!
    phoneNumber: String!
    dateRegistered: String!
    status: String!
    accounts: [Account]  # A customer can have multiple accounts
    notifications: [NotificationMessage]  # A customer can have multiple audit logs
}

type Account {
    id: ID!
    accountNumber: String!
    accountType: String!
    customerID: String!
    dateOpened: String!
    balance: Float!
    status: String!
    transactions: [Transaction]  # An account can have multiple transactions
}

type Transaction {
    id: ID!
    accountNumber: String!
    transactionType: String!
    dateTransacted: String!
    amount: Float!
    status: String!

}

type NotificationMessage {
    key: String
    value: String
}

# Query for retrieving customer data
type Query {
    getCustomerContext(id: ID!): CustomerContext
}
